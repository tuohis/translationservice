<table>
  <tr>
    <th>Text ID</th>
    <th>Language</th>
    <th>Text</th>
  </tr>
  <%= render 'translationListRow', translation: @translation %>
</table>
<p>
  <strong>History:</strong>
  <table id="history">
    <tr>
      <th>Replaced at</th>
      <th>Text</th>
    </tr>
    <% @translation.translation_histories.all.reverse.each do |h| %>
    <tr class="<%= cycle('even','odd') %>">
      <td><%= h.created_at %></td><td><%= h.text %></td>
    </tr>
    <% end %>
  </table>
</p>
