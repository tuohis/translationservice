<%= form_for :translation, url: translations_path do |f| %>
  <p>
    <%= f.label :text_id %><br/>
    <%= f.text_field :text_id %>
  </p>
  <p>
    <%= f.label :language %><br/>
    <%= f.text_field :language %>
    <%= f.check_box "all_languages" %>
    Create stub for all languages
  </p>
  <p>
    <%= f.label :text %><br/>
    <%= f.text_field :text %>
  </p>
  <p><%= f.submit %></p>
<% end %>
